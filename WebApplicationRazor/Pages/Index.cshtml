@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";

    var me = Model.GetInfoAboutMe();

}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>Hello ASP.NET</h2>
    <div>Message: @Model.Message</div>
    <div>Current time: @Model.GetCurrentTime()</div>

    

    <table class="table table-hover">
        <tbody>
            <tr>
                <td>My name</td>
                <td>@me.Name</td>
            </tr>
            <tr>
                <td>My bio</td>
                <td>@me.Bio</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>
                    <a href="mailto:@me.ContactEmail">@me.ContactEmail</a>
                </td>
            </tr>
    </table>

    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
